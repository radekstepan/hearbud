<Window x:Class="Hearbud.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Hearbud" Height="510" Width="960"
        MinHeight="510" MinWidth="900"
        ResizeMode="CanMinimize"
        Background="{StaticResource AppBackground}"
        Foreground="{StaticResource ControlForeground}">
    <DockPanel LastChildFill="True" Margin="16">
        <!-- Main content -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Devices -->
            <GroupBox Grid.Row="0" Grid.Column="0" Header="Audio Devices" Margin="0,0,8,4">
                <StackPanel Margin="6">
                    <TextBlock Text="Microphone (Input)" FontWeight="SemiBold"/>
                    <ComboBox x:Name="MicCombo" Margin="0,4,0,0"/>
                    <TextBlock Text="Audio Output (to capture)" Margin="0,12,0,0" FontWeight="SemiBold"/>
                    <ComboBox x:Name="SpeakerCombo" Margin="0,4,0,0"/>
                </StackPanel>
            </GroupBox>

            <!-- Output -->
            <GroupBox Grid.Row="0" Grid.Column="1" Header="Output Settings" Margin="8,0,0,4">
                <StackPanel Margin="6">
                    <TextBlock Text="Save Location" FontWeight="SemiBold"/>
                    <DockPanel Margin="0,4,0,0">
                        <Button Content="Browseâ€¦" Margin="8,0,0,0" Click="OnBrowseFolder" DockPanel.Dock="Right"/>
                        <TextBox x:Name="OutputFolderText" IsReadOnly="True" VerticalAlignment="Center"/>
                    </DockPanel>

                    <TextBlock Text="Base File Name (no extension)" Margin="0,12,0,0" FontWeight="SemiBold"/>
                    <TextBox x:Name="BaseNameText" Margin="0,4,0,0"/>

                    <!-- MP3 Bitrate selector -->
                    <TextBlock Text="MP3 Bitrate" Margin="0,12,0,0" FontWeight="SemiBold"/>
                    <ComboBox x:Name="Mp3BitrateCombo" Margin="0,4,0,0"
                              SelectedValuePath="Tag">
                        <ComboBoxItem Content="96 kbps"  Tag="96"/>
                        <ComboBoxItem Content="128 kbps" Tag="128"/>
                        <ComboBoxItem Content="160 kbps" Tag="160"/>
                        <ComboBoxItem Content="192 kbps" Tag="192"/>
                        <ComboBoxItem Content="224 kbps" Tag="224"/>
                        <ComboBoxItem Content="256 kbps" Tag="256"/>
                        <ComboBoxItem Content="320 kbps" Tag="320"/>
                    </ComboBox>
                </StackPanel>
            </GroupBox>

            <!-- Gains -->
            <GroupBox Grid.Row="1" Grid.Column="0" Header="Live Gain Controls" Margin="0,4,8,4">
                <StackPanel Margin="6">

                    <!-- Mic row -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="150"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Mic Gain" VerticalAlignment="Center" FontWeight="SemiBold"/>
                        <Slider x:Name="MicGain" Grid.Column="1" Minimum="0.0" Maximum="3.0" Value="1.0"
                                ValueChanged="OnGainChanged"/>
                        <TextBlock x:Name="MicGainLabel" Grid.Column="2" TextAlignment="Right"
                                   FontFamily="Consolas" VerticalAlignment="Center"/>
                    </Grid>

                    <!-- Output/System row -->
                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="150"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Output Gain" VerticalAlignment="Center" FontWeight="SemiBold"/>
                        <Slider x:Name="LoopGain" Grid.Column="1" Minimum="0.0" Maximum="3.0" Value="1.0"
                                ValueChanged="OnGainChanged"/>
                        <TextBlock x:Name="LoopGainLabel" Grid.Column="2" TextAlignment="Right"
                                   FontFamily="Consolas" VerticalAlignment="Center"/>
                    </Grid>

                </StackPanel>
            </GroupBox>

            <!-- Meters -->
            <GroupBox Grid.Row="1" Grid.Column="1" Header="Live Levels" Margin="8,4,0,4">
                <StackPanel Margin="6">
                    <!-- Mic meter -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="70"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Mic" VerticalAlignment="Center" FontWeight="SemiBold"/>
                        <ProgressBar Grid.Column="1" x:Name="MicBar" Minimum="0" Maximum="100" Margin="10,0"/>
                        <TextBlock Grid.Column="2" x:Name="MicDb" TextAlignment="Right" FontFamily="Consolas" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="3" x:Name="MicClip" Text="CLIP" Foreground="{StaticResource ControlDisabled}" VerticalAlignment="Center" Margin="8,0,0,0" FontWeight="Bold"/>
                    </Grid>

                    <!-- System meter -->
                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="70"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="System" VerticalAlignment="Center" FontWeight="SemiBold"/>
                        <ProgressBar Grid.Column="1" x:Name="SysBar" Minimum="0" Maximum="100" Margin="10,0"/>
                        <TextBlock Grid.Column="2" x:Name="SysDb" TextAlignment="Right" FontFamily="Consolas" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="3" x:Name="SysClip" Text="CLIP" Foreground="{StaticResource ControlDisabled}" VerticalAlignment="center" Margin="8,0,0,0" FontWeight="Bold"/>
                    </Grid>
                </StackPanel>
            </GroupBox>

            <!-- Controls -->
            <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.ColumnSpan="2" Margin="0,8,0,0">
                <Button x:Name="RefreshBtn" Content="Refresh Devices" Click="OnRefreshDevices"/>
                <Button x:Name="StartBtn" Content="Start Recording (Ctrl+R)" Click="OnStart" Margin="8,0,0,0"
                        Style="{StaticResource AccentButton}"/>
                <Button x:Name="StopBtn" Content="Stop (Ctrl+S)" Click="OnStop" IsEnabled="False" Margin="8,0,0,0"
                        Style="{StaticResource AccentButton}"/>
            </StackPanel>

            <!-- Status bar -->
            <Separator Grid.Row="3" Grid.ColumnSpan="2" Margin="0,12,0,0"/>
            <DockPanel Grid.Row="4" Grid.ColumnSpan="2" Margin="0,8,0,0">
                <TextBlock x:Name="VersionText" DockPanel.Dock="Right" Opacity="0.5" VerticalAlignment="Center"/>
                <TextBlock x:Name="StatusText" Text="Ready to record" Opacity="0.8" />
            </DockPanel>
        </Grid>
    </DockPanel>
</Window>
